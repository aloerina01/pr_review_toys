{
  "strict": true,
  "include": ["./src/*"],
  "compilerOptions": {
    "lib": ["dom", "es7"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}